@model IEnumerable<AnvilGroup.Services.Fit2Work.Models.ResourceModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>Resources</h2>
        @Html.ActionLink("Create New Resources", "Create", "Resources", null, new { @class = "btn btn-primary" })
        <div class="clearmed"></div>
        <table class="table table-striped table-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CultureCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserMessageText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPrimaryMessageText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimaryEmailSubject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserSecondaryMessageText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SecondaryEmailSubject)
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CultureCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserMessageText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserPrimaryMessageText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimaryEmailSubject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserSecondaryMessageText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecondaryEmailSubject)
                    </td>
                    <td>
                        @Html.ActionLink("View", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>