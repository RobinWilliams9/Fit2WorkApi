@using AnvilGroup.Services.Fit2Work.Models
@model IEnumerable<ClientModel>
<div class="row">
    <div class="col-md-12">
        <h2>@Model.Count() Clients</h2>
        @Html.ActionLink("Create New Client", "Create", "Client", null, new { @class = "btn btn-primary" })
        <div class="clearmed"></div>
        <table class="table table-striped table-sm">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Member Code</th>
                <th>Primary Email</th>
                <th>Secondary Email</th>
                <th>Is Deleted?</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.MemberCode</td>
                    <td>
                        <ul class="list-unstyled">
                            @foreach (var email in item.PrimaryEmailAddress.Split(','))
                            {
                                <li>@email</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul class="list-unstyled">
                            @foreach (var email in item.SecondaryEmailAddress.Split(','))
                            {
                                <li>@email</li>
                            }
                        </ul>
                    </td>
                    <td>@item.IsDeleted</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.UpdatedDate</td>
                    <td>@Html.ActionLink("View", "Details", "Client", new { id = item.Id }, null)</td>
                </tr>
            }
        </table>
    </div>
</div>